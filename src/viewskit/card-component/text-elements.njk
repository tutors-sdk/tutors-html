{% macro ects (lo) %}
  {% if (lo.properties.ects) and (lo.lotype == 'course') %}
    <div class="uk-card-footer">
      <div class="uk-badge uk-badge-danger">{{ lo.properties.ects }} Credits</div>
    </div>
  {% endif %}
{% endmacro %}

{% macro summary (lo) %}
  {% if (lo.objectives) %}
    <div class="uk-card-footer">
      {{ lo.objectives }}
    </div>
  {% endif %}
{% endmacro %}
